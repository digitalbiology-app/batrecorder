    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/code_caption"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#33b5e5"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="License Code:" />

        <EditText
            android:id="@+id/code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:background="#555555"
            android:padding="5dp"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:text="" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        >

        <Button
            android:id="@+id/codeCancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@android:string/cancel"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/dlg_button" />

        <Button
            android:id="@+id/codeRequestLicense"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/requestLicense"
            android:textColor="#ffffff"
            android:enabled="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/codeCancel"
            android:background="@drawable/dlg_button" />

    </RelativeLayout>

</LinearLayout>